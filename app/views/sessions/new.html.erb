
<h2>Sign In</h2>

<form class="sign-in" action="<%= session_url %>" method="post">
  <%= auth_token %>

  <h3>Welcome</h3>
  <div class="input">
    <label for="email">Email:</label>
    <input type="text" name="user[email]" value="" id="email">
  </div>

  <div class="input">
    <label for="password">Password:</label>
    <input type="password" id="password" name="user[password]" value="">
  </div>

  <div class="submit">
    <input type="submit" value="Sign In">
  </div>
</form>