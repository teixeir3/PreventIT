<form class="form" action="<%= session_url %>" method="post">
  <%= auth_token %>

  <h3>Welcome</h3>
  <div class="input">
    <label for="email">Email:</label>
    <input type="text" name="user[email]" value="<%= user.email if user %>" id="email">
  </div>

  <div class="input">
    <label for="password">Password:</label>
    <input type="password" id="password" name="user[password]" value="">
  </div>

  <div class="submit long-submit">
    <input type="submit" value="Sign In">
  </div>
  
  <div class="google-signin">
    <a class="group" href="/auth/google_oauth2"></a>
  </div>
  <%= link_to "Forgot password?", new_password_reset_url %>
  <a class="group" href="<%= new_user_url %>">Patient Sign Up</a>
  <a href="<%= new_doctor_url %>">Doctor Sign Up</a>
</form>