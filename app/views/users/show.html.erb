<%= render "sub_bar", user: @user%>

<main class="group">

  <div class="side-content">
    <div class="title">
      <h2>Patient:</h2>
    </div>
    <div class="side-info">
    <p><%= @user.full_name %></p>
  </div>

  </div>

  <div class="sub-content">
    <h3>Patient Details:</h3>
    <ul>
      <li>Email: <%= @user.email %></li>
      <li>Phone: <%= @user.phone %></li>
      <li>Height: <%= @user.health.empty? ? link_to("Not provided", edit_user_url(@user)) : @user.health[0].height %></li>
    </ul>
    <br><br><br><br>
  </div>

</main>