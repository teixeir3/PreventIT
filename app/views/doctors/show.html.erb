<%= render "sub_bar", doctor: @doctor%>

<main class="group">


  <div class="side-content">
    <div class="title">
      <h2>Doctor Page</h2>
    </div>
  </div>

  <div class="sub-content">

    <a href="<%= new_user_url %>">Add New Patient</a>
    <h3><%= @doctor.practice.name %> Patients: (Total: <%= @doctor.patients.count %>)</h3>
    <ul>
    <% current_user.patients.each do |patient| %>
      <li><%= link_to patient.email, user_url(patient) %></li>
    <% end %>
    </ul>


  </div>

</main>