<div class="sub-bar group">

  <div class="avatar">
    <%= image_tag current_user.avatar.url(:small) %>
  </div>

  <div class="nav-search group">
    <%= render "pages/nav_search" %>
  </div>

  <div class="user-info">
    <ul>
      <li><%= "Dr. " + current_user.full_name %></li>
      <li><%= link_to "Settings", edit_user_url(current_user) %></li>
      <li><%= link_to "Total Patients: #{current_user.patients.count}", doctor_url(current_user) %></li>
    </ul>
  </div>

  <div class="sub-nav">
    <ul>
      <li><%= link_to "Alerts", alerts_url %></li>
      <li><%= link_to "Appointment Types", appointment_types_url %></li>
      <li><a ="#">Goals</a></li>
      <li><a ="#">Reports</a></li>
    </ul>
  </div>
</div>