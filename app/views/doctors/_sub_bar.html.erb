<div class="sub-bar group">

  <div class="avatar">
    <%= image_tag current_user.avatar.url(:small) %>
  </div>

  <div class="nav-search group">
    <%= render "pages/nav_search" %>
  </div>

  <div class="user-info">
    <ul>
      <li><%= link_to "Total Patients: #{current_user.patients.count}", doctor_url(current_user) %></li>
    </ul>
  </div>

  <div class="sub-nav">
    <ul>
      <li id=<%= 'icon-selected' if params[:controller] == "alerts" %>><a class="<%= 'green-' if params[:controller] == "alerts" %>alert-icon icon group" href="<%= alerts_url %>">Alerts<strong class="counter-badge"><%= doctor.incomplete_alerts.count %></strong></a></li>
      <li id=<%= 'icon-selected' if params[:controller] == "appointment_types" %>><a class="<%= 'green-' if params[:controller] == "appointment_types" %>appointment-type-icon icon" href="<%= appointment_types_url %>">Types</a></li>
      <li id=<%= 'icon-selected' if params[:controller] == "goals" %>><a class="<%= 'green-' if params[:controller] == "goals" %>goal-icon icon" href="<%= %>">Goals</a></li>
      <li id=<%= 'icon-selected' if params[:controller] == "practice_reports" %>><a class="<%= 'green-' if params[:controller] == "practice_reports" %>report-icon icon" href="<%= %>">Reports</a></li>
    </ul>
  </div>
</div>

<%= render "application/messages", message_type: "errors" %>  
<%= render "application/messages", message_type: "notices" %>

<% content_for :js do %>
  <script type="text/javascript">
    $(document).ready(function() {
    
      $('.sub-nav > ul > li').click(function(data) {
        $(data.currentTarget).attr("id", "icon-clicked");
        
      });
      
    });
  </script>

<% end %>