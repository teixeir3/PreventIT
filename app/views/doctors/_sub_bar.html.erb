<div class="sub-bar group">

  <div class="avatar">
    <%= image_tag current_user.avatar.url(:small) %>
  </div>

  <div class="nav-search group">
    <%= render "pages/nav_search" %>
  </div>

  <div class="user-info">
    <ul>
      <li><%= link_to "Total Patients: #{current_user.patients.count}", doctor_url(current_user) %></li>
    </ul>
  </div>

  <div class="sub-nav">
    <ul>
      <li id=<%= 'icon-selected' if params[:controller] == "alerts" %>><a class="<%= 'green-' if params[:controller] == "alerts" %>alert-icon icon" href="<%= alerts_url %>">Alerts</a></li>
      <li id=<%= 'icon-selected' if params[:controller] == "appointment_types" %>><a class="<%= 'green-' if params[:controller] == "appointment_types" %>appointment-type-icon" href="<%= appointment_types_url %>">Types</a></li>
      <li id=<%= 'icon-selected' if params[:controller] == "goals" %>><a class="<%= 'green-' if params[:controller] == "goals" %>goal-icon" href="<%= %>">Goals</a></li>
      <li id=<%= 'icon-selected' if params[:controller] == "practice_reports" %>><a class="<%= 'green-' if params[:controller] == "practice_reports" %>report-icon icon" href="<%= %>">Reports</a></li>
    </ul>
  </div>
</div>