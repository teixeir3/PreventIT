<%= render "doctors/sub_bar", doctor: current_user%>

<main class="group">
  <div class="side-content">

    <div class="title">
      <h3>Search Results</h3>
    </div>

  </div>

  <div class="sub-content">

    <% if @results.empty? %>
      <p>No Results Found matching "<%= params[:query] %>"</p>
    <% else %>
      <%= paginate @results %>
      <h4><%= @results.count %> Patients Found matching "<%= params[:query] %>"</h4>
    <br>
      <ul>
        <% @results.each do |result| %>
          <li><%= link_to result.full_name_by_last, user_url(result) %></li>
        <% end %>
      </ul>
    <% end %>
    <%#= render @results.map(&:searchable) #%>
  </div>
</main>